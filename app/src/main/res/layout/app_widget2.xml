<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="@dimen/widget_margin">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical">

                <TextClock
                    android:id="@+id/txtClock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:format12Hour="hh:mm"
                    android:textSize="62sp"
                    android:fontFamily="@font/widget_font_2"
                    android:textColor="@android:color/primary_text_dark"/>

                <TextClock
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:format12Hour="EEE,dd MMMM"
                    android:paddingStart="4dp"
                    android:textSize="17sp"
                    android:fontFamily="@font/widget_font_2"
                    android:textColor="@android:color/primary_text_dark"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/widget_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <TextView
                    android:id="@+id/widget_main_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="44sp"
                    android:textColor="@android:color/primary_text_dark"
                    android:fontFamily="@font/widget_font_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="28sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@android:color/primary_text_dark"
                    android:text="Â°"
                    android:fontFamily="@font/widget_font_2"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/widget_min_temp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:paddingTop="10dp"
                        android:layout_marginBottom="1dp"
                        android:textColor="@android:color/primary_text_dark"
                        android:textSize="14sp"
                        android:fontFamily="@font/widget_font_2"/>

                    <TextView
                        android:id="@+id/widget_max_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginTop="1dp"
                        android:textColor="@android:color/primary_text_dark"
                        android:textSize="14sp"
                        android:fontFamily="@font/widget_font_2"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/widget_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:textColor="@android:color/primary_text_dark"
                android:paddingEnd="2dp"
                android:textAlignment="textEnd"
                android:fontFamily="@font/widget_font_2"/>
            <TextView
                android:id="@+id/widget_last_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/primary_text_dark"
                android:textAlignment="textEnd"
                android:paddingEnd="2dp"
                android:fontFamily="@font/widget_font_2"/>

        </LinearLayout>

</RelativeLayout>